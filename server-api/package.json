{
  "name": "@alkemio/test-suite-server-api",
  "version": "0.3.0",
  "description": "Alkemio API quality assurance test suite.",
  "author": "Alkemio Holding",
  "private": false,
  "license": "EUPL-1.2",
  "main": "src/setupTests.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alkemio/test-suites.git"
  },
  "eslintIgnore": [
    "src/generated/graphql.tsx",
    "**/node_modules/**",
    "**/build**"
  ],
  "scripts": {
    "ts:watch": "tsc --noEmit --watch",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "circular-dependencies": "madge --circular dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "tsc --noEmit && eslint src/**/*.ts{,x}",
    "lint:prod": "tsc --noEmit && cross-env NODE_ENV=production eslint src/**/*.ts{,x}",
    "lint:fix": "tsc --noEmit && eslint src/**/*.ts{,x} --fix",
    "codegen": "graphql-codegen --config codegen.ts",
    "test": "jest",
    "stop-process": "fuser 4000/tcp -k",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:nightly": "jest  --maxWorkers=1 --config ./config/jest.config.nightly.mjs",
    "test:communications": "jest --forceExit --runInBand --config ./config/jest.config.communications.mjs",
    "test:notifications": "jest --forceExit --runInBand --config ./config/jest.config.notifications.mjs",
    "test:notifications:callouts": "jest --forceExit --runInBand --config ./config/jest.config.notifications-callouts.mjs",
    "test:notifications:messaging": "jest --forceExit --runInBand --config ./config/jest.config.notifications-messaging.mjs",
    "test:notifications:community": "jest --forceExit --runInBand --config ./config/jest.config.notifications-community.mjs",
    "test:lifecycle": "jest --forceExit --runInBand --config ./config/jest.config.lifecycle.mjs",
    "test:account": "jest --forceExit --runInBand --config ./config/jest.config.account.mjs",
    "test:callouts": "jest --forceExit --runInBand --config ./config/jest.config.callouts.mjs",
    "test:integration-parallel": "jest --forceExit --maxWorkers=4 --config ./config/jest.config.integration.mjs",
    "test:organization": "jest --forceExit --maxWorkers=6 --config ./config/jest.config.organization.mjs",
    "test:search": "jest --forceExit --maxWorkers=6 --config ./config/jest.config.search.mjs",
    "test:communication": "jest --forceExit --runInBand --config ./config/jest.config.communication.mjs",
    "test:entitlements": "jest --forceExit --runInBand --config ./config/jest.config.entitlements.mjs",
    "test:journey": "jest --forceExit --runInBand --config ./config/jest.config.journey.mjs",
    "test:activity-logs": "jest --forceExit --runInBand --config ./config/jest.config.activity-logs.mjs",
    "test:contributormanagement": "jest --forceExit --runInBand --config ./config/jest.config.contributor-management.mjs",
    "test:integration": "jest --forceExit --maxWorkers=1 --verbose --config ./config/jest.config.integration.mjs",
    "test:storage": "jest --forceExit --maxWorkers=1 --verbose --config ./config/jest.config.storage.mjs",
    "test:preferences": "jest --forceExit --maxWorkers=3 --config ./config/jest.config.preferences.mjs",
    "test:pagination": "jest --forceExit --maxWorkers=1 --verbose --config ./config/jest.config.pagination.mjs",
    "test:roleset": "jest --forceExit --runInBand --verbose --config ./config/jest.config.roleset.mjs",
    "test:subscriptions": "jest --forceExit --maxWorkers=1 --verbose --config ./config/jest.config.subscriptions.mjs",
    "test:templates": "jest --forceExit --maxWorkers=1 --verbose --config ./config/jest.config.templates.mjs",
    "test:innovation": "jest --forceExit --maxWorkers=1 --verbose --config ./config/jest.config.innovationPacks.mjs",
    "test:documents": "jest --forceExit --maxWorkers=1 --verbose --config ./config/jest.config.documents.mjs",
    "test:configuration": "jest --forceExit --maxWorkers=1 --verbose --config ./config/jest.config.configuration.mjs",
    "innovation-pack-with-templates": "ts-node-dev ./src/functional-api/innovation-pack/innovation-pack-with-templates.ts",
    "validate-scenario-setup": "ts-node-dev ./src/scripts/validate-scenario-setup.ts"
  },
  "dependencies": {
    "@alkemio/client-lib": "^0.32.0",
    "@alkemio/tests-lib": "^0.1.4",
    "@ory/kratos-client": "^0.11.1",
    "axios": "^1.7.9",
    "cross-env": "^7.0.3",
    "fs": "^0.0.1-security",
    "graphql": "^16.10.0",
    "graphql-type-json": "^0.3.2",
    "graphql-ws": "^5.8.2",
    "winston": "^3.17.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@graphql-codegen/add": "^5.0.3",
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/import-types-preset": "^3.0.0",
    "@graphql-codegen/typed-document-node": "^5.0.12",
    "@graphql-codegen/typescript": "4.1.2",
    "@graphql-codegen/typescript-graphql-request": "^6.2.0",
    "@graphql-codegen/typescript-operations": "4.4.0",
    "@graphql-codegen/typescript-resolvers": "4.4.1",
    "@types/cache-manager": "^4.0.6",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/module-alias": "^2.0.0",
    "@types/node": "^20.13.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "8.18.1",
    "@typescript-eslint/parser": "8.18.1",
    "coveralls": "^3.1.0",
    "dotenv": "^16.0.0",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "graphql-request": "6.0.0",
    "husky": "^9.1.7",
    "jest-html-reporters": "^3.1.7",
    "lint-staged": "^15.2.1",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.21.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">=17.9.1",
    "npm": ">=10"
  },
  "volta": {
    "node": "17.9.1"
  }
}
